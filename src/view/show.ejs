<!DOCTYPE HTML>
<html>

<head>
    <title>Mangarando</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"  integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="index.js"></script>
    <link rel="stylesheet" type="text/css" href="./styles.css"  /> 
</head>

<body>
    <div class="container-sm">
        <div class="row" style="text-align: center" >
          <div class="margin">
            <h3><%= manga.name%></h3>
          </div>
          <div class="margin" >
            <img src="https://uploads.mangadex.org/covers/<%= manga.id+'/'+manga.cover_art_file_name %>.256.jpg" alt="icone_manga" >
          </div>
        </div>
        <div class="row" class="margin" >
          <button type="button" id="download" class="btn btn-primary btn-lg btn-block">Baixar todos</button>
          <input type="hidden" id="manga_id" value="<%= manga.id %>"/>
        </div>
        <div id="conteudo" class="grid text-center">
            <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">Capitulo</th>
                    <th scope="col">Idioma</th>
                    <th scope="col">Visualizar</th>
                  </tr>
                </thead>
                <tbody>
                
                <% for(var i=0; i<capitulos.length; i++) {%>
                  <tr>
                    <th scope="row"> Capitulo <%= capitulos[i].chapter %> </th>
                    <td> <%= capitulos[i].language %> </td>
                    <td>
                      <a href="/read?chapter_id=<%= capitulos[i].id %>%>">
                       <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                      </svg>
                    </a>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
        </div>
    </div>

</body>
</html>